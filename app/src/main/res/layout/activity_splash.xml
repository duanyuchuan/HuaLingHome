<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:hualing="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_advertisement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lly_log_botton"
        android:background="@mipmap/xinggan3"
        android:scaleType="centerCrop"
        />

    <com.hualing.hualinghome.view.SkipButtonView
        android:id="@+id/sbv_skip_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        hualing:SkipButtonColor="@android:color/darker_gray"
        hualing:OuterColor="@android:color/holo_red_dark"
        hualing:SkipButtonText="跳过"
        hualing:SkipButtonTextColor="#ffffff"
        hualing:SkipButtonTextSize="20dp"
        >
    </com.hualing.hualinghome.view.SkipButtonView>

    <LinearLayout
        android:id="@+id/lly_log_botton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#DDDDDD"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/kaola_logo_red"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版权所有  ©2018-2028 华领网络科技有限公司"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>
</RelativeLayout>
