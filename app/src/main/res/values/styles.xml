<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="SkipButtonView">
        <attr name="SkipButtonColor" format="color"/>
        <attr name="OuterColor" format="color"/>
        <attr name="SkipButtonTextColor" format="color"/>
        <attr name="SkipButtonTextSize" format="dimension"/>
        <attr name="SkipButtonText" format="string"/>
    </declare-styleable>

</resources>
